{
  "compilerOptions": {
      "target": "ES2017",
      "noImplicitAny": false, 
      "lib": ["dom", "dom.iterable", "esnext"],
      "allowJs": true,
      "noEmit": true,
      "esModuleInterop": true,
      "module": "esnext",
      "moduleResolution": "bundler",
      "resolveJsonModule": true,
      "types": ["next"],
      "isolatedModules": true,
      "jsx": "preserve",
      "incremental": true,
      "plugins": [
          {
              "name": "next"
          }
      ],
      "paths": {
          "@/*": ["./src/*"]
      },
      "skipLibCheck": true,
      "strict": false
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
